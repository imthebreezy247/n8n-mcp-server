# TikTok Auto Clipper Environment Variables
# Copy this file to .env and fill in your actual values

# TMDB API (The Movie Database)
TMDB_API_KEY=your_tmdb_api_key_here

# TikTok API Credentials
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_REFRESH_TOKEN=your_tiktok_refresh_token

# Video Processing Service (Cloudinary example)
VIDEO_SERVICE_API_KEY=your_video_service_key
VIDEO_SERVICE_SECRET=your_video_service_secret
VIDEO_SERVICE_CLOUD_NAME=your_cloud_name

# Video Source Storage (Where original movies are stored)
VIDEO_SOURCE_TYPE=s3_or_local_or_url
AWS_S3_BUCKET=your_bucket_name
AWS_ACCESS_KEY=your_aws_key
AWS_SECRET_KEY=your_aws_secret

# N8N Webhook Settings
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.com

# Notification Settings
NOTIFICATION_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Legal/Safety Settings
ENABLE_COPYRIGHT_CHECK=true
DRY_RUN_MODE=true
